local library = {}

function library:createWindow(windowName)
    local window = Instance.new("ScreenGui")
    window.Name = "MainScreen"
    window.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
    window.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

    local firstWindow = Instance.new("Frame")
    firstWindow.Name = "FirstWindow"
    firstWindow.Parent = window
    firstWindow.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    firstWindow.BorderSizePixel = 0
    firstWindow.Position = UDim2.new(0.019, 0, 0.022, 0)
    firstWindow.Size = UDim2.new(0, 181, 0, 33)

    local blueDetail = Instance.new("Frame")
    blueDetail.Name = "BlueDetail"
    blueDetail.Parent = firstWindow
    blueDetail.BackgroundColor3 = Color3.fromRGB(85, 170, 255)
    blueDetail.BorderSizePixel = 0
    blueDetail.Position = UDim2.new(0, 0, 0.909, 0)
    blueDetail.Size = UDim2.new(0, 181, 0, 3)

    local windowLabel = Instance.new("TextLabel")
    windowLabel.Name = "WindowLabel"
    windowLabel.Parent = firstWindow
    windowLabel.BackgroundTransparency = 1
    windowLabel.Position = UDim2.new(0.057, 0, 0, 0)
    windowLabel.Size = UDim2.new(0, 72, 0, 30)
    windowLabel.Font = Enum.Font.SourceSans
    windowLabel.Text = windowName
    windowLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    windowLabel.TextSize = 14

    local minimize = Instance.new("ImageButton")
    minimize.Name = "Minimize"
    minimize.Parent = firstWindow
    minimize.BackgroundTransparency = 1
    minimize.Position = UDim2.new(0.777, 0, 0, 0)
    minimize.Size = UDim2.new(0, 35, 0, 30)
    minimize.Image = "http://www.roblox.com/asset/?id=100072349353278"

    local featurePanel = Instance.new("Frame")
    featurePanel.Name = "FeaturePanel"
    featurePanel.Parent = firstWindow
    featurePanel.BackgroundColor3 = Color3.fromRGB(42, 42, 42)
    featurePanel.BorderSizePixel = 0
    featurePanel.Position = UDim2.new(0, 0, 1, 0)
    featurePanel.Size = UDim2.new(0, 181, 0, 260)
    featurePanel.Visible = true

    local function animatePanel(panel, targetPosition, duration)
        local startPosition = panel.Position
        local startTime = tick()

        local function update()
            local elapsed = tick() - startTime
            local progress = elapsed / duration
            panel.Position = startPosition:Lerp(targetPosition, progress)

            if progress < 1 then
                task.wait()
                update()
            end
        end

        update()
    end

    minimize.MouseButton1Click:Connect(function()
        if featurePanel.Visible then
            animatePanel(featurePanel, UDim2.new(0, 0, 0, -260), 0.2)
            task.wait(0.2)
            featurePanel.Visible = false
        else
            featurePanel.Visible = true
            animatePanel(featurePanel, UDim2.new(0, 0, 1, 0), 0.2)
        end
    end)

    local dragging = false
    local dragInput, dragStart, startPos

    firstWindow.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = firstWindow.Position

            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)

    firstWindow.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)

    game:GetService("UserInputService").InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            local delta = input.Position - dragStart
            firstWindow.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)

    local windowAPI = {}

    function windowAPI:addButton(buttonName, callback)
        local button = Instance.new("TextButton")
        button.Name = buttonName
        button.Parent = featurePanel
        button.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
        button.BorderSizePixel = 0
        button.Position = UDim2.new(0.03, 0, 0.05, 0)
        button.Size = UDim2.new(0, 174, 0, 26)
        button.Font = Enum.Font.SourceSans
        button.Text = buttonName
        button.TextColor3 = Color3.fromRGB(255, 255, 255)
        button.TextSize = 14

        button.MouseButton1Click:Connect(callback)
    end

    function windowAPI:addLabel(labelName)
        local label = Instance.new("TextLabel")
        label.Name = labelName
        label.Parent = featurePanel
        label.BackgroundTransparency = 1
        label.Position = UDim2.new(0.03, 0, 0.15, 0)
        label.Size = UDim2.new(0, 174, 0, 26)
        label.Font = Enum.Font.SourceSans
        label.Text = labelName
        label.TextColor3 = Color3.fromRGB(255, 255, 255)
        label.TextSize = 14
    end

    function windowAPI:addCheckbox(checkboxName, callback)
        local checkbox = Instance.new("ImageButton")
        checkbox.Name = checkboxName
        checkbox.Parent = featurePanel
        checkbox.BackgroundColor3 = Color3.fromRGB(42, 42, 42)
        checkbox.BorderColor3 = Color3.fromRGB(88, 88, 88)
        checkbox.Position = UDim2.new(0.743, 0, 0.865, 0)
        checkbox.Size = UDim2.new(0, 33, 0, 26)
        checkbox.Image = "rbxasset://textures/ui/GuiImagePlaceholder.png"

        local checked = false
        checkbox.MouseButton1Click:Connect(function()
            checked = not checked
            if checked then
                checkbox.Image = "http://www.roblox.com/asset/?id=checked_image_id"
            else
                checkbox.Image = "rbxasset://textures/ui/GuiImagePlaceholder.png"
            end
            callback(checked)
        end)
    end

    return windowAPI
end

local blurEffect = Instance.new("BlurEffect")
blurEffect.Size = 24
blurEffect.Parent = game:GetService("Lighting")
blurEffect.Enabled = true

game:GetService("UserInputService").InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.Insert then
        for _, screenGui in ipairs(game.Players.LocalPlayer.PlayerGui:GetChildren()) do
            if screenGui:IsA("ScreenGui") then
                screenGui.Enabled = not screenGui.Enabled
            end
        end
        blurEffect.Enabled = not blurEffect.Enabled
    end
end)

return library
